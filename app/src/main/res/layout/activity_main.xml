<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGoToBounceAni"
        style="@style/button_back_style"
        android:layout_marginTop="124dp"
        android:text="Go To Bounce Animation Page "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoToScale"
        style="@style/button_back_style"
        android:layout_marginTop="24dp"
        android:text="Go to Scale Activity"
        app:layout_constraintEnd_toEndOf="@+id/btnGoToBounceAni"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnGoToBounceAni"
        app:layout_constraintTop_toBottomOf="@+id/btnGoToBounceAni" />

    <Button
        android:id="@+id/btngoAnimations"
        style="@style/button_back_style"
        android:layout_marginTop="24dp"
        android:text="Go to Animations Activity"
        app:layout_constraintEnd_toEndOf="@+id/btnGoToScale"
        app:layout_constraintStart_toStartOf="@+id/btnGoToScale"
        app:layout_constraintTop_toBottomOf="@+id/btnGoToScale" />
</androidx.constraintlayout.widget.ConstraintLayout>